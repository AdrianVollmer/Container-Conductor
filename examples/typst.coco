name: typst
cli:
  help: "Typst: Compose papers faster"
  arguments:
  options: {}
  commands:
    - name: compile
      help: "Compile a document"
      arguments:
        - args:
            - args
          kwargs:
            nargs: -1
    - name: watch
      help: "Watch a document"
      arguments:
        - args:
            - file
compose-file:
  services:
    typst:
      command: sh -c "typst ${CLI_ARGS}"
      image: docker.io/123marvin123/typst
      init: true
      volumes:
        - ${CWD}:/root
