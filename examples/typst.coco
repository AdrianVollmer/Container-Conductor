name: typst
cli:
  help: "Typst: Compose papers faster"
  commands:
    - name: compile
      help: "Compile a document"
      arguments:
        - args:
            - args
          kwargs:
            nargs: -1
    - name: watch
      help: "Watch a document"
      arguments:
        - args:
            - file
podman-cmd: |
  run --rm \
    --volume {CWD}:/root \
    docker.io/123marvin123/typst \
    typst {CLI_ARGS}
